<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.codingub.locationtracking.ui.fragments.LoginFragment"
        android:label="LoginFragment" >
        <action
            android:id="@+id/action_loginFragment_to_trackingFragment"
            app:destination="@id/trackingFragment"
            app:enterAnim="@anim/circular_animation"
            app:popEnterAnim="@anim/circular_animation" />
    </fragment>
    <fragment
        android:id="@+id/trackingFragment"
        android:name="com.codingub.locationtracking.ui.fragments.TrackingFragment"
        android:label="TrackingFragment" />
</navigation>